<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="ac.robinson.bettertogether.plugin.cardgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/card_ic_launcher"
        android:label="@string/cardgame_plugin_name"
        android:roundIcon="@mipmap/card_ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/BetterTogether.PluginStyle.deep_purple">

        <meta-data
            android:name="ac.robinson.bettertogether.intent.extra.PLUGIN_THEME"
            android:value="deep_purple"/>

        <activity
            android:name="ac.robinson.bettertogether.plugin.base.cardgame.BaseCardGameActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="ac.robinson.bettertogether.intent.action.LAUNCH_PLUGIN"/>
            </intent-filter>
        </activity>

        <!-- This plugin doesn't provide a launcher, so we import the default info activity, which -->
        <!-- launches Better Together (if present), or opens the Play Store to prompt installation -->
        <activity
            android:name="ac.robinson.bettertogether.api.DefaultActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.INFO"/>
            </intent-filter>
        </activity>
    </application>

</manifest>