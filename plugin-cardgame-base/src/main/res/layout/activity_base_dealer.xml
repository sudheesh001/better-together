<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ac.robinson.bettertogether.plugin.base.cardgame.dealer.BaseDealerActivity">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/deckImage"
        android:layout_width="100dp"
        android:layout_height="150dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/openDeckImage"
        android:layout_width="100dp"
        android:layout_height="150dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_below="@id/deckImage"/>

    <ImageView
        android:id="@+id/discardedDeckImage"
        android:layout_width="100dp"
        android:layout_height="150dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_below="@id/deckImage"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
