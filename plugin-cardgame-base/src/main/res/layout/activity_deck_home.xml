<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ac.robinson.bettertogether.plugin.base.cardgame.common.DeckHomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/headerTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

            <TextView
                android:id="@+id/createdByTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/descriptionByTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createdByTextView"
                android:text="TextView"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/firstCardImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/backCardImage"
                android:layout_marginEnd="44dp"
                android:layout_marginRight="44dp"
                app:srcCompat="@mipmap/deck_placeholder" />

            <ImageView
                android:id="@+id/backCardImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/headerTextView"
                android:layout_marginLeft="48dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="76dp"
                app:srcCompat="@mipmap/deck_placeholder" />

            <TextView
                android:id="@+id/rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/firstCardImage"
                android:layout_alignLeft="@+id/backCardImage"
                android:layout_alignRight="@+id/firstCardImage"
                android:layout_alignStart="@+id/backCardImage"
                android:layout_below="@+id/headerTextView"
                android:layout_marginTop="23dp"
                android:text="TextView" />

            <Button
                android:id="@+id/downloadButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/firstCardImage"
                android:layout_alignLeft="@+id/backCardImage"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/firstCardImage"
                android:layout_alignStart="@+id/backCardImage"
                android:layout_marginBottom="16dp"
                android:text="Download" />

            <ProgressBar
                android:id="@+id/determinateBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:progress="25"/>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
